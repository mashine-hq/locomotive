%section#contacts
  .container
    %h2.text-center Связаться с нами
    .row
      .col-xs-11.col-xs-offset-1
        = form_for '/feedback', method: 'post', role: 'form' do |f|
          .row.form-group
            .col-xs-2
              %label Имя
            .col-xs-6
              = text_field_tag :name, '', class: 'form-control'
          .row.form-group
            .col-xs-2
              %label Емейл
            .col-xs-6
              = text_field_tag :email, '', class: 'form-control'
          .row.form-group
            .col-xs-2
              %label Сообщение
            .col-xs-6
              = text_area_tag :message, '', class: 'form-control', rows: '3'
          .row.form-group
            .col-xs-6.col-xs-offset-2
              = f.submit 'Отправить', class: 'btn btn-success'
